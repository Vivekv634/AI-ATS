# AI-ATS Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# Application Settings
# =============================================================================
APP_DEBUG=false
APP_ENVIRONMENT=development

# =============================================================================
# Database Settings (MongoDB)
# =============================================================================
DB_HOST=localhost
DB_PORT=27017
DB_NAME=ai_ats
# DB_USERNAME=
# DB_PASSWORD=

# =============================================================================
# Vector Store Settings
# =============================================================================
VECTOR_PROVIDER=chromadb
# VECTOR_PERSIST_DIRECTORY=./data/vectors

# =============================================================================
# Machine Learning Settings
# =============================================================================
ML_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
ML_SPACY_MODEL=en_core_web_trf
ML_DEVICE=auto
ML_BATCH_SIZE=32

# =============================================================================
# UI Settings
# =============================================================================
UI_THEME=system
UI_LANGUAGE=en
UI_WINDOW_WIDTH=1400
UI_WINDOW_HEIGHT=900

# =============================================================================
# Logging Settings
# =============================================================================
LOG_LEVEL=INFO
LOG_CONSOLE_OUTPUT=true
